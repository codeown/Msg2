@model Msg2.Models.MessageListViewModel

@{
    ViewBag.Title = "MessagesFilter";
}

<!DOCTYPE html>
<html>

<head>
    <title>
        Все сообщения
    </title>
</head>

<body>
    <h2>Все сообщения</h2>

    <br />
    <p>
        @Html.ActionLink("Написать сообщение", "Send")
    </p>

    <br />

   


    <table>
        <thead>
            <tr>
                <td>Id сообщения</td>
                <td>Время отправления</td>
                <td>Кто отправил</td>
                <td>Текст сообщения</td>
            </tr>
        </thead>

        <tbody>
            @{
                foreach (var item in Model.Messages)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.MessageId)</td>
                        <td>@Html.DisplayFor(modelItem => item.DateTime)</td>
                        <td>@Html.DisplayFor(modelItem => item.From)</td>
                        <td>@Html.DisplayFor(modelItem => item.Body)</td>
                    </tr>
                }
            }
        </tbody>

    </table>
</body>

</html>